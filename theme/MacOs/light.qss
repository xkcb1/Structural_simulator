/* 重定义一下treeview*/
QTreeView {
    alternate-background-color: #9f9f9f;
    background-color: #999999;

}

QTreeView::item:hover {
    background-color: #A6A6A6;
}

QTreeView::item:selected {
    background-color: #929EB7;
    border: 1px solid #929EB7;
}

QTreeView::item:selected:active {
    background: #929EB7;
}
QHeaderView {
    background-color: #999999 !important;
    border: 0px !important;
    outline: 0px !important;
}

/*startPanel*/
#startPanel {
    border-radius: 5px;
    background-color: #c0c0c0;
    border: 1px solid #a6a6a6;
}
QSplitter::handle {
    background-color: #999;
}
QCheckBox,
QRadioButton {
    spacing: 8px
}

QGroupBox::title,
QAbstractItemView::item {
    spacing: 6px
}

QCheckBox::indicator,
QGroupBox::indicator,
QAbstractItemView::indicator,
QRadioButton::indicator {
    height: 18px;
    width: 18px
}

QCheckBox::indicator,
QGroupBox::indicator,
QAbstractItemView::indicator {
    image: url(img/qdarktheme/check_box_outline_blank_e1e5e9_0.svg)
}

QCheckBox::indicator:unchecked:disabled,
QGroupBox::indicator:unchecked:disabled,
QAbstractItemView::indicator:unchecked:disabled {
    image: url(img/qdarktheme/check_box_outline_blank_e4e7eb66_0.svg)
}

QCheckBox::indicator:checked,
QGroupBox::indicator:checked,
QAbstractItemView::indicator:checked {
    image: url(img/qdarktheme/check_box_8ab4f7_0.svg)
}

QCheckBox::indicator:checked:disabled,
QGroupBox::indicator:checked:disabled,
QAbstractItemView::indicator:checked:disabled {
    image: url(img/qdarktheme/check_box_e4e7eb66_0.svg)
}

QCheckBox::indicator:indeterminate,
QAbstractItemView::indicator:indeterminate {
    image: url(img/qdarktheme/indeterminate_check_box_8ab4f7_0.svg)
}

QCheckBox::indicator:indeterminate:disabled,
QAbstractItemView::indicator:indeterminate:disabled {
    image: url(img/qdarktheme/indeterminate_check_box_e4e7eb66_0.svg)
}

QRadioButton::indicator:unchecked {
    image: url(img/qdarktheme/radio_button_unchecked_e1e5e9_0.svg)
}

QRadioButton::indicator:unchecked:disabled {
    image: url(img/qdarktheme/radio_button_unchecked_e4e7eb66_0.svg)
}

QRadioButton::indicator:checked {
    image: url(img/qdarktheme/radio_button_checked_8ab4f7_0.svg)
}

QRadioButton::indicator:checked:disabled {
    image: url(img/qdarktheme/radio_button_checked_e4e7eb66_0.svg)
}
ToolTip,
