/* Blender-style dark theme QSS */

/* Set the application palette to a light color scheme */


* {
    color: black;
    font-family: 微软雅黑;
    font-size: 11px !important;
}

/* Set the background color for all widgets */
QMainWindow {
    background-color: #222;
}

/* Set the text color for all widgets */
QLabel,
QPushButton,
QLineEdit {
    color: black;
}

/* Set the background color for buttons and provide a hover effect */
QPushButton {
    background-color: #DBDBDB;
    border: 1px solid #4d4d4d;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #f1f1f1;
    border: 1px solid #595959;
}

QPushButton::pressed {
    background-color: #5680C2;
}
/* 奇怪的是，为什么dark里的checkbutton和普通的button是一样的 */
/* 但是light里面两个的样式是不一样的 */
#checkButton_0 {
    background-color: #3b3b3b;
    border: 1px solid #4d4d4d;
    border-radius: 4px;
}
#checkButton_0:hover {
    background-color: #474747;
    border: 1px solid #595959;
}

#checkButton_0::pressed {
    background-color: #5F85C1;
}

#checkButton_1 {
    background-color: #5F85C1;
    border: 1px solid #4d4d4d;
    border-radius: 4px;
}

#checkButton_1:hover {
    background-color: #5F85C1;
    border: 1px solid #595959;
}

#checkButton_1::pressed {
    background-color: #5F85C1;
}
/* Set the background color for line edits */
QLineEdit {
    background-color: #232323;
    padding: 5px;
    border-radius: 4px;
    border: 1px solid #4d4d4d;
    color: #eee;
}

QLineEdit:hover {
    background-color: #353535;
    padding: 5px;
    border-radius: 4px;
    border: 1px solid #595959;
    color:white;
}

/*combobox*/
QComboBox,
#Choose_Window,QToolButton {
    background-color: #3b3b3b;
    border-radius: 4px;
    border: 1px solid #3d3d3d;
    color:lightgray
}

QComboBox:hover,
#Choose_Window:hover,
QToolButton:hover {
    background-color: #474747;
    border: 1px solid #464646;
}

QComboBox:pressed,
#Choose_Window:pressed,
QToolButton:pressed {
    background-color: #767676;
    border-color: #3d3d3d;
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
}

QComboBox::drop-down {
    margin: 2px 2px 2px -6px;
    border-radius: 4
}

QComboBox::drop-down:editable:hover {
    background: rgba(255, 255, 255, 0.145)
}

QComboBox::down-arrow {
    image: url(img/qdarktheme/expand_less_e1e5e9_180.svg)
}

QComboBox::down-arrow:disabled {
    image: url(img/qdarktheme/expand_less_e4e7eb66_180.svg)
}

QComboBox::down-arrow:editable:open {
    image: url(img/qdarktheme/expand_less_e1e5e9_0.svg)
}

QComboBox::down-arrow:editable:open:disabled {
    image: url(img/qdarktheme/expand_less_e4e7eb66_0.svg)
}

QComboBox::item:selected {
    border: none;
    background: #6086C2;
    border-radius: 4px
}

QComboBox QListView {
    margin: 0;
    padding: 4px;
    background: #595959;
    border-radius: 0px;
    border: 1px solid #333;
}

QComboBox QListView::item {
    border-radius: 4px;
}

QListWidget::item:hover {
    background-color: #ddd;
}

QListWidget::item:selected {
    background-color: #5F85C1;
}
/* Set the background color for menuBar and menu items */

QMenuBar {
    background-color: #ABABAB;
    color: #222;
    padding-top: 2px !important;
    padding-bottom: 2px !important;
    padding-left: 0px !important;
    margin-left: 0px !important;
    margin-bottom: 2px;
    font-size: 11px;
}

QMenuBar::item,#ButtonMenuBar {
    background-color: transparent;
    padding: 3px !important;
    margin: 0px !important;
    margin-right: 0px !important;
    margin-left: 0px !important;
    border-color: rgba(0, 0, 0, 0);
}

QMenuBar::item:selected,#ButtonMenuBar:hover {
    background-color: #5E84C0;
    border: 1px solid #5680C2;
    border-radius: 4px !important;
    color: white !important;
}


QMenuBar::item:pressed,#ButtonMenuBar:pressed {
    background-color: #5E84C0;
    border: 1px solid #5680C2;
    color: white;
}

/* Set the background color for QToolTip */

QToolTip {
    background-color: #eee;
    color: black !important;
    border-radius: 2px;
    border: 1px solid #ddd;
}

/* Set the background color for menu and menu items */

QMenu {
    background-color: #ddd !important;
    border-radius: 5px !important;
    border: 1px solid #a6a6a6 !important;
    padding: 0px;
    padding-top: 2px;
    padding-bottom: 2px;
}

QMenu::item,#ButtonMenu {
    background-color: transparent;
    color: #222;
    margin: 2px !important;
    margin-top: 3px !important;
    margin-bottom: 3px !important;
    padding: 2px !important;
    padding-left: 2px;
    margin-right: 5px;
    margin-left: 5px;
    border: 0px;
}

QMenu::item:selected,#ButtonMenu:hover {
    background-color: #6086C2;
    border-radius: 3px !important;
    color: white !important;
}

QMenu::separator,#Hline {
    background-color: #acacac !important;
    padding: 0px !important;
    margin: 0px !important;
    max-height: 1px !important;
    border: 0px !important;
    border-radius: 0px !important;
    outline: 0px !important;
    height: 1px !important;
}

/* Set the background color for sliders */
QSlider::groove:horizontal {
    border: 1px solid #1a1a1a;
    background: #292929;
    height: 8px;
}

QSlider::handle:horizontal {
    background: #444444;
    border: 1px solid #1a1a1a;
    width: 14px;
    margin: -2px 0;
}

/* Set the background color for progress bars */
QProgressBar {
    border: 1px solid #1a1a1a;
    background: #292929;
    height: 8px;
}

QProgressBar::chunk {
    background: #444444;
    width: 1px;
}

/* Set the background color for tab bars and tabs */
QTabWidget::pane {
    border: 0px;
    background: rgba(0, 0, 0, 0);
}

QTabBar {
    padding: 0px;
}

QTabBar::tab {
    background: #898989;
    padding: 5px;
    border: 1px solid #3b3b3b;
    border-bottom: 0px !important;
    color: #333;
    border-radius: 5px;
    margin-top: 3px;
    padding-top: 3px;
    margin-bottom: 0px;
    padding-bottom: 3px;
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
    padding-right: 12px;
    padding-left: 12px;
}

QTabBar::tab:hover {
    background: #939393;
    color: #222;
}

QTabBar::tab:selected {
    background: #b3b3b3;
    color: #111;
    border-color: #333;
}

/* Set the background color for group boxes */
QGroupBox {
    border: 1px solid #1a1a1a;
    background: #292929;
}

/* Set the background color for checkboxes and radio buttons */

/* Set the background color for sliders and spin boxes in QSpinBox */
QSpinBox,
QDoubleSpinBox,
QSlider {
    background: #292929;
}

QSpinBox::up-button,
QDoubleSpinBox::up-button,
QSlider::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 16px;
}

QSpinBox::down-button,
QDoubleSpinBox::down-button,
QSlider::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 16px;
}

QStatusBar {
    background-color: #B8B8B8;
    padding: 0px !important;
    margin: 0px;
    border: 0px !important;
    image: none !important;
    margin-top: 2px !important;
    color: #111 !important;
}

QMainWindow::separator {
    image: none !important;
    background-color: rgba(0, 0, 0, 0) !important;
    width: 3px;
}

/* Set the DockWidget Style */
QDockWidget {
    titlebar-close-icon: url(./img/macButton/red_3.png);
    titlebar-normal-icon: url(./img/macButton/green_3.png);
}

QDockWidget::title {
    background: #b3b3b3;
    border-radius: 0px;
    border-top-right-radius: 5px !important;
    border-top-left-radius: 5px !important;
    border: 0px;
    border-bottom: 0px !important;
    padding-bottom: 4px;
    padding-top: 5px;
}
QDockWidget::title:hover {
    background: #b8b8b8;
}

QDockWidget::close-button {
    subcontrol-position: top right;
    subcontrol-origin: margin;
    position: absolute;
    top: 4px;
    left: 0px;
    right: 4px;
    bottom: 0px;
    width: 14px;
    height: 14px;
}

QDockWidget::float-button {
    subcontrol-position: top right;
    subcontrol-origin: margin;
    position: absolute;
    top: 4px;
    left: 16px;
    bottom: 0px;
    right: 21px;
    width: 14px;
    height: 14px;
}

QDockWidget::close-button:hover,
QDockWidget::float-button:hover {
    padding: 1px -1px -1px 1px;
}

QDockWidget::close-button:pressed,
QDockWidget::float-button:pressed {
    padding: 1px -1px -1px 1px;
}

/*QScrollBar*/
QScrollBar:horizontal {
    height: 14px;
    border: 1px solid transparent;
    border-radius: 4px !important;
    background-color: rgba(0, 0, 0, 0);
}

QScrollBar:vertical {
    width: 14px;
    border: 1px solid transparent;
    border-radius: 4px !important;
    background-color: rgba(0, 0, 0, 0);
}

QScrollBar::handle {
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 3px;
}

QScrollBar::handle:hover {
    background-color: rgba(255, 255, 255, 0.7);
}

QScrollBar::handle:pressed {
    background-color: rgba(255, 255, 255, 0.8);
}

QScrollBar::handle:disabled {
    background-color: rgba(255, 255, 255, 0.5);
}

QScrollBar::handle:horizontal {
    min-width: 8px;
    margin: 4px 14px;
    border-radius: 1px;
}

QScrollBar::handle:horizontal:hover {
    margin: 3px 14px;
    border-radius: 2px;
}

QScrollBar::handle:vertical {
    min-height: 8px;
    margin: 14px 4px;
    border-radius: 1px;
}

QScrollBar::handle:vertical:hover {
    margin: 14px 3px;
    border-radius: 2px;
}

QScrollBar::sub-page,
QScrollBar::add-page {
    background-color: transparent;
}

QScrollBar::sub-line,
QScrollBar::add-line {
    background-color: transparent;
}

QScrollBar::up-arrow:enabled {
    image: url(img/qdarktheme/arrow_drop_up_ffffff2f_0.svg);
}

QScrollBar::right-arrow:enabled {
    image: url(img/qdarktheme/arrow_drop_up_ffffff2f_90.svg);
}

QScrollBar::down-arrow:enabled {
    image: url(img/qdarktheme/arrow_drop_up_ffffff2f_180.svg);
}

QScrollBar::left-arrow:enabled {
    image: url(img/qdarktheme/arrow_drop_up_ffffff2f_270.svg);
}

QScrollBar::up-arrow:hover {
    image: url(img/qdarktheme/arrow_drop_up_ffffff5f_0.svg);
}

QScrollBar::right-arrow:hover {
    image: url(img/qdarktheme/arrow_drop_up_ffffff5f_90.svg);
}

QScrollBar::down-arrow:hover {
    image: url(img/qdarktheme/arrow_drop_up_ffffff5f_180.svg);
}

QScrollBar::left-arrow:hover {
    image: url(img/qdarktheme/arrow_drop_up_ffffff5f_270.svg);
}

